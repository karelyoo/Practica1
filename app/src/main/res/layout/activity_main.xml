<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.david.practica1.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/txt1"
        android:background="@android:color/background_light"
        android:text="Teclee un NÃºmero Entero"
        android:textSize="24sp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/edtxt1"
        android:textAlignment="center"
        android:background="@android:color/background_light"
        android:layout_below="@id/txt1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:id="@+id/btn1"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:layout_below="@+id/edtxt1"
        android:text="Realizar Operacion"
        android:onClick="sumatoria"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtxt2"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        android:layout_below="@+id/btn1"
        android:textSize="18sp"/>
</LinearLayout>
